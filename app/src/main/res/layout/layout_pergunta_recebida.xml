<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/foto_perfil_item_responder"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/perfil"
            android:layout_alignParentLeft="true"
            card_view:civ_border="false" />

        <TextView
            android:text="Denis Viana"
            android:id="@+id/nome_usuario_item_responder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/foto_perfil_item_responder" />

        <TextView
            android:text="16/02/2017"
            android:id="@+id/data_pergunta_item_responder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nome_usuario_item_responder"
            android:layout_alignStart="@+id/nome_usuario_item_responder"
            android:layout_below="@+id/nome_usuario_item_responder" />

        <TextView
            android:id="@+id/pontos_item_responder"
            android:padding="5dp"
            android:textColor="#fff"
            android:background="@drawable/shape_spinner"
            android:text="10 PONTOS"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce ultrices eu est nec pretium. Sed sit amet metus ultrices, ornare libero sed, faucibus tellus."
            android:id="@+id/pergunta_item_responder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/foto_perfil_item_responder"
            android:layout_marginTop="12dp"
            android:maxLines="5" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@id/pergunta_item_responder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@drawable/shape_tags"
                android:textColor="@color/branco"
                android:padding="3dp"
                android:textStyle="bold"
                android:textSize="10sp"
                android:text="CÁLCULO I"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:background="@drawable/shape_tags"
                android:textColor="@color/branco"
                android:padding="3dp"
                android:textStyle="bold"
                android:textSize="10sp"
                android:text="INTEGRAIS"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:background="@drawable/shape_tags"
                android:textColor="@color/branco"
                android:padding="3dp"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>